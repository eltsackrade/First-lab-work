package com.company;
        import java.util.Scanner;



public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n;
        int k = 0;
        n = input.nextInt();
        for (int i = 1; i <= 1000000; i *= 2) {
            if (i >= n) {
                System.out.println(k);
                System.exit(0);

            }
            k++;
        }
    }
}
